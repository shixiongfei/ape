(defn fib (n)
  (if (<= 2 n)
      (+ (fib (- n 1)) (fib (- n 2)))
    n))

(print "fib 28 =" (fib 28))


(defn counter (val step)
  (def count val)
  (fn ()
    (set! count (+ count step))))

(def count (counter 0 1))

(print "Count" (count))
